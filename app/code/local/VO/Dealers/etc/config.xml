<config>
	<modules>
		<VO_Dealers>
			<version>0.1.1</version>
		</VO_Dealers>
	</modules>
	<frontend>
		<routers>
			<dealers>
				<use>standard</use>
				<args>
					<module>VO_dealers</module>
					<frontName>Dealers</frontName>
				</args>
			</dealers>
		</routers>
		<layout>
			<updates>
				<dealers>
					<file>dealers.xml</file>
				</dealers>
			</updates>
		</layout>
	</frontend>
	<admin>
		<routers>
			<dealers>
				<use>admin</use>
				<args>
					<module>VO_Dealers</module>
					<frontName>dealers</frontName>
				</args>
			</dealers>
		</routers>
	</admin>
	<default>
		<dealers>
			<dealer_types>
			</dealer_types>
		</dealers>
	</default>
	<adminhtml>
		<menu>
			<customer module="customer">
				<children>
					<dealers module="dealers">
						<title>Dealers</title>
						<sort_order>8</sort_order>
						<action>dealers/adminhtml_dealer</action>
					</dealers>
				</children>
			</customer>
		</menu>
		<acl>
			<resources>
				<all>
					<title>Allow Everything</title>
				</all>
				<admin>
					<children>
						<customer>
							<children>
								<dealers module="dealers">
									<title>Dealers Module</title>
									<sort_order>8</sort_order>
								</dealers>
							</children>
						</customer>

						<system>
							<children>
								<config>
									<children>
										<dealer_types module="dealers">
											<title>Types</title>
										</dealer_types>
										<application module="dealers">
											<title>Sign-Up</title>
										</application>
										<display module="dealers">
											<title>Display</title>
										</display>
									</children>
								</config>
							</children>
						</system>
					</children>
				</admin>
			</resources>
		</acl>
		<layout>
			<updates>
				<dealers>
					<file>dealers.xml</file>
				</dealers>
			</updates>
		</layout>
	</adminhtml>
	<global>
		<models>
			<dealers>
				<class>VO_Dealers_Model</class>
				<resourceModel>dealers_mysql4</resourceModel>
			</dealers>
			<dealers_mysql4>
				<class>VO_Dealers_Model_Mysql4</class>
				<entities>
					<dealers>
						<table>dealers</table>
					</dealers>
				</entities>
			</dealers_mysql4>
		</models>
		<resources>
			<dealers_setup>
				<setup>
					<module>VO_Dealers</module>
				</setup>
				<connection>
					<use>core_setup</use>
				</connection>
			</dealers_setup>
			<dealers_write>
				<connection>
					<use>core_write</use>
				</connection>
			</dealers_write>
			<dealers_read>
				<connection>
					<use>core_read</use>
				</connection>
			</dealers_read>
		</resources>
		<blocks>
			<dealers>
				<class>VO_Dealers_Block</class>
			</dealers>
		</blocks>
		<helpers>
			<dealers>
				<class>VO_Dealers_Helper</class>
			</dealers>
		</helpers>
	</global>
</config>